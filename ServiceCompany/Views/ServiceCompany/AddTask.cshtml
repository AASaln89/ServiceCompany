@using ServiceCompany.DbStuff.Models.Enums
@model TaskViewModel

@{
    Layout = "_LayoutServiceCompany";
}

@section Style
{
    <link href="~/css/ServiceCompany.css" rel="stylesheet" />
    <link href="~/css/Styles.css" rel="stylesheet" />
}

<div class="regContainer">
    <h2>Панель администратора</h2>
    <div>
        <div class="add-task">
            <h2>Добавить компанию</h2>
            <form method="post" action="/ServiceCompany/AddTask">
                <label for="name"> Название заявки:</label>
                @Html.TextBoxFor(x => x.Name)
                @Html.ValidationMessageFor(x => x.Name)

                <label for="description">Описание:</label>
                @Html.TextBoxFor(x => x.Description)
                @Html.ValidationMessageFor(x => x.Description)

                <input class="submit" type="submit" value="Создать заявку" />
            </form>
        </div>
    </div>
</div>


